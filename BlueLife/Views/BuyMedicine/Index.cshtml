@{
    ViewData["Title"] = "Аптека";
}
@model List<BlueLife.ViewModels.Admin.PharmacyWarehouseViewModel>
<div class="container">
    <div class="col-lg-12 d-flex justify-content-start mb-4 mt-3">
        <div class="dropdown">
            <button class="btn btn-outline-primary dropdown-toggle shadow-sm rounded ml-1" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Фильтрация
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <form asp-controller="BuyMedicine" asp-action="Index" method="get">
                    <button class="dropdown-item btn" type="submit" value="" name="medicineType">Все</button>
                    <button class="dropdown-item btn" type="submit" value="increasing" name="sort">От А до Я</button>
                    <div class="dropdown-divider"></div>
                    @if (ViewBag.AllMedicineType != null)
                    {
                        @foreach (var medicineType in  ViewBag.AllMedicineType)
                        {
                            <button class="dropdown-item btn" type="submit" value="@medicineType.Type" name="medicineType">@medicineType.Type</button>
                        }
                    }
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var medicine in @Model)
        {
            <div class="col-4 mb-4">
                <div class="card">
                    <img class="card-img" src="@medicine.ReleaseMedicine.Image" alt="@medicine.ReleaseMedicine.Medicine.MedicineName.Name image">
                    <div class="card-body">
                        <h4 class="card-title">@medicine.ReleaseMedicine.Medicine.MedicineName.Name</h4>
                        <p class="card-text cropped-text">
                            @medicine.ReleaseMedicine.Description
                        </p>
                        <div class="price text-success">
                            <h5 class="mt-4">@medicine.Price BYN</h5>
                        </div>
                        <div class="buy d-flex justify-content-between align-items-center">
                            <div>
                                <a asp-action="Medicine" asp-controller="BuyMedicine" asp-route-id="@medicine.Id" class="btn btn-primary mt-3"><i class="fas fa-shopping-cart"></i>Подробнее</a>
                            </div>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="">
                                    <form method="post" asp-controller="BuyMedicine" asp-action="AddMedicineToBasket">
                                        <input type="hidden" name="UserId" value="@User.Claims.ElementAt(0).Value"/>
                                        <input type="hidden" name="MedicineInPharmacyWarehouseId" value="@medicine.Id"/>
                                        <input id="quantity" type="hidden" name="Quantity" value="1"/>
                                        <button asp-action="AddMedicineToBasketInIndex" asp-controller="BuyMedicine" asp-route-id="@medicine.Id" class="btn btn-success mt-3"><i class="fas fa-shopping-cart"></i>В корзину</button>
                                    </form>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>