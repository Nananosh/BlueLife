@model List<Order>
<div class="container">
    <div id="content">
        <div class="row mt-5">
            <div class="col-lg-12">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">Номер заказа</th>
                        <th scope="col">Дата заказа</th>
                        <th scope="col">Статус</th>
                        <th scope="col">Итоговая сумма</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var order in @Model)
                    {
                        <tr>
                            <th scope="row"><a asp-action="Order" asp-controller="BuyMedicine" asp-route-id="@order.Id">@order.Id</a></th>
                            <td>@order.OrderDate</td>
                            <td>@order.OrderStatus.Status</td>
                            <td>@order.TotalAmount BYN</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>