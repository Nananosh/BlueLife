@{
    ViewData["Title"] = "Поиск";
}
@model List<PharmacyWarehouse>
<div class="row">
    <div class="col-lg-12 d-flex justify-content-center mb-5"><div class="h2">Найдено @Model.Count</div></div>
    @foreach (var medicine in @Model)
    {
        <div class="col-4 mb-4">
            <div class="card">
                <img class="card-img" src="@medicine.ReleaseMedicine.Image" alt="@medicine.ReleaseMedicine.Medicine.MedicineName.Name image">
                <div class="card-body">
                    <h4 class="card-title">@medicine.ReleaseMedicine.Medicine.MedicineName.Name</h4>
                    <p class="card-text cropped-text">
                        @medicine.ReleaseMedicine.Description
                    </p>
                    <div class="buy d-flex justify-content-between align-items-center">
                        <div class="price text-success">
                            <h5 class="mt-4">@medicine.Price BYN</h5>
                        </div>
                        <a asp-action="Medicine" asp-controller="BuyMedicine" asp-route-id="@medicine.Id" class="btn btn-primary mt-3"><i class="fas fa-shopping-cart"></i>Подробнее</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>