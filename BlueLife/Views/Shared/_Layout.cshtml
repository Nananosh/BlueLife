<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - BlueLife</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    
    <link rel="stylesheet" href="~/lib/Kendo/styles/kendo.classic-opal.min.css"/>
    <script src="~/lib/Kendo/js/jquery.min.js"></script>
    <script src="~/lib/Kendo/js/kendo.all.min.js"></script>
    <script src="~/lib/Kendo/js/kendo.timezones.min.js"></script>
    <script src="~/lib/Kendo/js/cultures/kendo.culture.ru.min.js"></script>
    <script src="~/lib/Kendo/js/messages/kendo.messages.ru-RU.min.js"></script>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm  navbar-light border-bottom box-shadow mb-3" style="background-color: #e3f2fd;">
                <div class="container col-lg-8">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BlueLife</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1 justify-content-start">
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Index" asp-controller="Home">Главная</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav flex-grow-1 justify-content-end">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown"
                                       role="button" data-toggle="dropdown" aria-haspopup="true"
                                       aria-expanded="false">
                                        <img id="avatar" class="rounded-circle" src="" value="" alt="avatar" style="height: 33px; width: 33px; object-fit:cover;"/>
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" asp-route-id="@User.Claims.ElementAt(0).Value">@User.Claims.ElementAt(1).Value</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="AdminPanel">Админ панель</a>
                                        @* @if (User.IsInRole("Admin")) *@
                                        @* { *@
                                        @*      *@
                                        @* } *@
                                        <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Выход</a>
                                    </div>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Войти</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Зарегистрироваться</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
</header>
<main role="main">
    <div class="container">
        @RenderBody()
    </div>
</main>
@if (User.Identity.IsAuthenticated)
{
    <script>
let avatar = document.getElementById('avatar');
$.get('@Url.Action("GetUserImage","Account", new{id = User.Claims.ElementAt(0).Value})', function(data, status){
    avatar.src = data;
});
    </script>
}
@* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>