@model BlueLife.ViewModels.Admin.MedicineManufacturerViewModel

<form class="form-group" method="post" asp-controller="Admin" asp-action="AddMedicineManufacturer">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label>Производитель</label>
        <input class="form-control shadow-sm bg-white rounded" asp-for="Manufacturer" placeholder="Введите имя производителя">
        <span asp-validation-for="Manufacturer" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block shadow-sm rounded">Добавить</button>
    </div>
</form>