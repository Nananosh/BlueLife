@model BlueLife.ViewModels.Admin.MedicineUnitViewModel

<form class="form-group" method="post" asp-controller="Admin" asp-action="AddMedicineUnit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label>Единица измерения</label>
        <input class="form-control shadow-sm bg-white rounded" asp-for="Unit" placeholder="Введите единицу измерения">
        <span asp-validation-for="Unit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block shadow-sm rounded">Добавить</button>
    </div>
</form>