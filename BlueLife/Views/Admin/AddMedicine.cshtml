@model BlueLife.ViewModels.Admin.MedicineViewModel

<form class="form-group" method="post" asp-controller="Admin" asp-action="AddMedicine">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label>Название лекарства</label>
        <input id="medicineName" class="form-control shadow-sm bg-white rounded" style="width: 40%;" asp-for="MedicineNameId"/>
    </div>
    <div class="form-group">
        <label>Форма выпуска лекарства</label>
        <input id="medicineType" class="form-control shadow-sm bg-white rounded" style="width: 40%;" asp-for="MedicineTypeId"/>
    </div>
    <div class="form-group">
        <label>Единица измерения лекарства</label>
        <input id="medicineUnit" class="form-control shadow-sm bg-white rounded" style="width: 40%;" asp-for="MedicineUnitId"/>
    </div>
    <div class="form-group">
        <label>Объём лекарства</label>
        <input class="form-control shadow-sm bg-white rounded" asp-for="Volume" placeholder="Введите объём лекарства">
        <span asp-validation-for="Volume" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Доза лекарства</label>
        <input class="form-control shadow-sm bg-white rounded" asp-for="Dosage" placeholder="Введите дозу лекарства">
        <span asp-validation-for="Dosage" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block shadow-sm rounded">Добавить</button>
    </div>
</form>

<script>
$("#medicineName").kendoDropDownList({
        dataTextField: "name",
        dataValueField: "id",
        optionLabel: "Выберите название лекарства...",
        height: 500,
        dataSource: {
            transport: {
                read: {
                    url: "@Url.Action("GetAllMedicineName", "Admin")",
                    dataType: "json",
                    cache: false
                }
            }
        }
    });

$("#medicineType").kendoDropDownList({
        dataTextField: "type",
        dataValueField: "id",
        optionLabel: "Выберите форму выпуска лекарства...",
        height: 500,
        dataSource: {
            transport: {
                read: {
                    url: "@Url.Action("GetAllMedicineType", "Admin")",
                    dataType: "json",
                    cache: false
                }
            }
        }
    });

$("#medicineUnit").kendoDropDownList({
        dataTextField: "unit",
        dataValueField: "id",
        optionLabel: "Выберите единицу измерения лекарства...",
        height: 500,
        dataSource: {
            transport: {
                read: {
                    url: "@Url.Action("GetAllMedicineUnit", "Admin")",
                    dataType: "json",
                    cache: false
                }
            }
        }
    });
</script>