@{
    ViewData["Title"] = "Home Page";
}
@model List<BlueLife.ViewModels.Admin.PharmacyWarehouseViewModel>
<div class="row" style="background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0) 50%, rgb(135, 206, 235) 100%), url(../../back.png) no-repeat center center fixed; height: 350px; width: 100%; background-size: cover; margin: 0;">
</div>
<div class="col-lg-12 d-flex justify-content-center mb-1 mt-2">
    <div>
        <div class="h1 d-flex justify-content-center sb">BlueLife</div>
        <br/>
    </div>
</div>
<div class="col-lg-12 d-flex justify-content-center mb-5">
    <div>
        <div class="h3 d-flex justify-content-center" style="font-family: Rostov">Добро пожаловать в аптеку</div>
        <br/>
    </div>
</div>
<div class="container">
    <div class="row">
        @{
            var count = @Model.Count;
            if (count > 6)
            {
                count = 6;
            }
            else
            {
                count = @Model.Count;
            }
        }
        @for (int i = 0; i < count; i++)
        {
            <div class="col-4 mb-4">
                <div class="card">
                    <img class="card-img" src="@Model[i].ReleaseMedicine.Image" alt="@Model[i].ReleaseMedicine.Medicine.MedicineName.Name image">
                    <div class="card-body">
                        <h4 class="card-title">@Model[i].ReleaseMedicine.Medicine.MedicineName.Name</h4>
                        <p class="card-text cropped-text">
                            @Model[i].ReleaseMedicine.Description
                        </p>
                        <div class="price text-success">
                            <h5 class="mt-4">@Model[i].Price BYN</h5>
                        </div>
                        <div class="buy d-flex justify-content-between align-items-center">
                            <div>
                                <a asp-action="Medicine" asp-controller="BuyMedicine" asp-route-id="@Model[i].Id" class="btn btn-primary mt-3"><i class="fas fa-shopping-cart"></i>Подробнее</a>
                            </div>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="">
                                    <form method="post" asp-controller="BuyMedicine" asp-action="AddMedicineToBasket">
                                        <input type="hidden" name="UserId" value="@User.Claims.ElementAt(0).Value"/>
                                        <input type="hidden" name="MedicineInPharmacyWarehouseId" value="@Model[i].Id"/>
                                        <input id="quantity" type="hidden" name="Quantity" value="1"/>
                                        <button asp-action="AddMedicineToBasketInIndex" asp-controller="BuyMedicine" asp-route-id="@Model[i].Id" class="btn btn-success mt-3"><i class="fas fa-shopping-cart"></i>В корзину</button>
                                    </form>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<style>
    .body{
    margin:  0px;
    }
</style>